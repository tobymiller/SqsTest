<configuration>
    <appSettings>
        <!-- Configure the SDK to use System.Diagnostics -->
        <add key="AWSLogging" value="SystemDiagnostics"/>
    </appSettings>

    <system.diagnostics>
        <trace autoflush="true"/>

        <sources>
            <source name="Amazon">
                <listeners>
                    <add name="text"
                         type="System.Diagnostics.TextWriterTraceListener"
                         initializeData="logs.txt"/>
                </listeners>
            </source>
        </sources>

    </system.diagnostics>
</configuration>